{
  "auto_start": {
    "enabled": true,
    "check_interval": 30,
    "ide_detection": true,
    "project_detection": true,
    "auto_restart": true,
    "max_restart_attempts": 3,
    "restart_delay": 5
  },
  "servers": {
    "cursor": {
      "enabled": true,
      "command": "python",
      "args": ["cursor_mcp_server.py"],
      "conditions": ["cursor_ide", "python_files"],
      "env": {
        "PYTHONPATH": "${PROJECT_ROOT}",
        "LOG_LEVEL": "INFO",
        "ENABLE_FINANCIAL_DATA": "true",
        "ENABLE_INDICATORS": "true"
      },
      "cwd": "${PROJECT_ROOT}",
      "transport": "stdio",
      "priority": 1
    },
    "pycharm": {
      "enabled": true,
      "command": "python",
      "args": ["pycharm_github_copilot_mcp.py"],
      "conditions": ["pycharm_ide", "python_files"],
      "env": {
        "PYTHONPATH": "${PROJECT_ROOT}",
        "LOG_LEVEL": "INFO",
        "ENABLE_AST_ANALYSIS": "true"
      },
      "cwd": "${PROJECT_ROOT}",
      "transport": "stdio",
      "priority": 2
    }
  },
  "conditions": {
    "cursor_ide": {
      "processes": ["Cursor", "cursor", "Cursor.exe"],
      "files": [".cursor", "cursor_mcp_config.json", ".cursor/settings.json"],
      "env_vars": ["CURSOR_EXTENSION_DIR"]
    },
    "pycharm_ide": {
      "processes": ["pycharm", "PyCharm", "idea", "pycharm64.exe", "idea64.exe"],
      "files": [".idea", "pycharm_mcp_config.json", ".idea/workspace.xml"],
      "env_vars": ["PYCHARM_HOME", "IDEA_HOME"]
    },
    "vscode_ide": {
      "processes": ["code", "Code", "code.exe"],
      "files": [".vscode", ".vscode/settings.json"],
      "env_vars": ["VSCODE_EXTENSIONS"]
    },
    "python_files": {
      "extensions": [".py"],
      "min_files": 1,
      "required_files": ["requirements.txt", "pyproject.toml", "setup.py"]
    },
    "financial_data": {
      "directories": ["mql5_feed", "data", "financial_data"],
      "files": ["*.csv", "*.parquet", "*.json"],
      "min_files": 1
    },
    "project_structure": {
      "required_dirs": ["src", "tests", "docs"],
      "optional_dirs": ["scripts", "config", "logs"]
    }
  },
  "monitoring": {
    "enable_monitoring": true,
    "health_check_interval": 60,
    "max_memory_mb": 512,
    "max_cpu_percent": 80,
    "log_rotation": {
      "max_size_mb": 100,
      "backup_count": 5
    },
    "alerts": {
      "memory_threshold": 80,
      "cpu_threshold": 90,
      "restart_threshold": 3
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s [%(levelname)s] [%(name)s] %(message)s",
    "file": "logs/mcp_auto_starter.log",
    "console": true,
    "max_file_size_mb": 10,
    "backup_count": 3
  },
  "security": {
    "allowed_paths": ["${PROJECT_ROOT}"],
    "max_file_size": 10485760,
    "timeout": 30000,
    "validate_inputs": true,
    "sanitize_paths": true
  },
  "performance": {
    "cache_enabled": true,
    "cache_size": 1000,
    "cache_ttl": 3600,
    "lazy_loading": true,
    "parallel_processing": true,
    "max_workers": 4
  },
  "integration": {
    "ide_integration": {
      "cursor": {
        "config_file": ".cursor/settings.json",
        "auto_config": true
      },
      "pycharm": {
        "config_file": "pycharm_mcp_config.json",
        "auto_config": true
      },
      "vscode": {
        "config_file": ".vscode/settings.json",
        "auto_config": true
      }
    },
    "ci_cd": {
      "github_actions": true,
      "gitlab_ci": true,
      "jenkins": true,
      "auto_deploy": false
    }
  },
  "notifications": {
    "enabled": false,
    "providers": {
      "email": {
        "enabled": false,
        "smtp_server": "",
        "smtp_port": 587,
        "username": "",
        "password": ""
      },
      "slack": {
        "enabled": false,
        "webhook_url": ""
      },
      "discord": {
        "enabled": false,
        "webhook_url": ""
      }
    },
    "events": {
      "server_start": true,
      "server_stop": true,
      "server_error": true,
      "health_check_failed": true
    }
  }
} 