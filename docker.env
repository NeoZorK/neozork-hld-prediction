# Docker environment configuration
USE_UV=true
UV_ONLY=true
DOCKER_CONTAINER=true

# Python configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# MCP Server configuration
MCP_SERVER_TYPE=neozork_unified

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/docker.log

# Data directories
DATA_DIR=/app/data
LOGS_DIR=/app/logs
RESULTS_DIR=/app/results

# UV specific configuration
UV_CACHE_DIR=/app/.uv_cache
UV_VENV_DIR=/app/.venv

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neozork_fund
DB_USER=neozork_user
DB_PASSWORD=neozork_password
DATABASE_URL=postgresql://neozork_user:neozork_password@postgres:5432/neozork_fund 