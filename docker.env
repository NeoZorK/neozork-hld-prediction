# Docker environment configuration
USE_UV=true
UV_ONLY=true
DOCKER_CONTAINER=true

# Python configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# MCP Server configuration
MCP_SERVER_TYPE=neozork_unified

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/docker.log

# Data directories
DATA_DIR=/app/data
LOGS_DIR=/app/logs
RESULTS_DIR=/app/results

# UV specific configuration
UV_CACHE_DIR=/app/.uv_cache
UV_VENV_DIR=/app/.venv

# Memory management configuration - Optimized for Docker with 8GB limit
MAX_MEMORY_MB=6144
CHUNK_SIZE=50000
SAMPLE_SIZE=10000
MAX_FILE_SIZE_MB=200
ENABLE_MEMORY_OPTIMIZATION=true
ENABLE_STREAMING=true

# Memory optimization thresholds - More permissive for large datasets
MEMORY_WARNING_THRESHOLD=0.8
MEMORY_CRITICAL_THRESHOLD=0.95