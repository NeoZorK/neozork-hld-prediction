{
  "mcpServers": {
    "neozork-hld-prediction": {
      "command": "python",
      "args": ["-m", "mcp.mcp_server"],
      "env": {
        "PROJECT_ROOT": ".",
        "PYTHONPATH": "./src"
      }
    }
  },
  "server": {
    "name": "NeoZorK HLD Prediction MCP Server",
    "version": "1.0.0",
    "description": "MCP Server for High Low Prediction Time Series Financial rates project",
    "capabilities": {
      "resources": true,
      "tools": true,
      "prompts": true
    }
  },
  "resources": {
    "include_patterns": [
      "src/**/*.py",
      "tests/**/*.py",
      "scripts/**/*.py",
      "*.py",
      "*.md",
      "*.txt",
      "*.json",
      "*.yaml",
      "*.yml"
    ],
    "exclude_patterns": [
      "__pycache__/**",
      "*.pyc",
      ".git/**",
      ".idea/**",
      "venv/**",
      "env/**",
      ".env",
      "*.log"
    ]
  }
}

